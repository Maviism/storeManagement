<Window x:Class="storeManagement.MVVM.View.Modal.ScannerModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:storeManagement.MVVM.View.Modal"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closed="Window_onClose"
        Title="ScannerModal" Height="450" Width="800">
    <Grid>
        <Image x:Name="image1" Stretch="Fill"/>
        <ComboBox x:Name="cboDevice" HorizontalAlignment="Left" Margin="135,33,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="pictureBox" HorizontalAlignment="Left" Height="241" Margin="57,114,0,0" VerticalAlignment="Top" Width="378"/>
        <Button Content="Start" HorizontalAlignment="Left" Click="btnStart_Click" Margin="643,114,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textQRCode" HorizontalAlignment="Left" Height="85" Margin="581,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
    </Grid>
</Window>
