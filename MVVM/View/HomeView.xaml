<UserControl x:Class="storeManagement.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:storeManagement.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="Home" Foreground="White"
               FontSize="28"/>
        <StackPanel Margin="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Border Width="200" Height="150" Margin="0,0,50,0">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#5bc3ff" Offset="0.0"/>
                            <GradientStop Color="red" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <StackPanel>
                            <Label Content="Items terjual" FontSize="30" HorizontalAlignment="Center" FontWeight="SemiBold" FontStretch="Expanded" />
                            <Label Content="0" FontSize="30" 
                                   FontWeight="Bold"
                                   VerticalContentAlignment="Center" HorizontalAlignment="Center"/>
                            
                        </StackPanel>
                        
                    </Grid>
                </Border>
                
                <Border Width="250" Height="150">

                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#5bc3ff" Offset="0.0"/>
                            <GradientStop Color="red" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <StackPanel>
                            <Label Content="Daily transaction" FontSize="30" HorizontalAlignment="Center" FontWeight="SemiBold" FontStretch="Expanded" />
                            <Label Content="0" FontSize="30" 
                                   FontWeight="Bold"
                                   VerticalContentAlignment="Center" HorizontalAlignment="Center"/>

                        </StackPanel>

                    </Grid>
                </Border>
                
                <Border Width="200" Height="150" Margin="50,0,0,0" CornerRadius="15">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#5bc3ff" Offset="0.0"/>
                            <GradientStop Color="LightPink" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <StackPanel>
                            <Label Content="Omzet" FontSize="30" HorizontalAlignment="Center" FontWeight="SemiBold" FontStretch="Expanded" />
                            <Label Content="0" FontSize="30" 
                                   FontWeight="Bold"
                                   VerticalContentAlignment="Center" HorizontalAlignment="Center"/>

                        </StackPanel>

                    </Grid>
                </Border>
            </StackPanel>

            <Label Content="Items yg bentar lagi abis" Foreground="white" FontSize="30"/>

        </StackPanel>
    </StackPanel>
</UserControl>
